<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asus.yarafirstproject.CategoryFragment"
    android:orientation="vertical"
    android:gravity="center|top"
    android:layout_margin="@dimen/app_border">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/category_fragment"
        android:padding="@dimen/app_border"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/go_to_users_btn"
        android:text="لیست کاربران"/>

</LinearLayout>
